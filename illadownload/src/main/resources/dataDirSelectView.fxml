<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-preview-i18n-resource dataDirSelectView_de.properties?>
<?scenebuilder-stylesheet applicationFrame.css?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="illarion.download.gui.controller.DataDirSelectionController">
    <children>
        <VBox fx:id="content" fillWidth="true">
            <fx:define>
                <ToggleGroup fx:id="storageMethodSelect" />
            </fx:define>
            <children>
                <Label style="-fx-font-size: 20pt" text="%title">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <Label text="%descriptionGeneral" wrapText="true" />
                <Label text="%descriptionAbsoluteRelative" wrapText="true" />
                <VBox alignment="BOTTOM_LEFT" fillWidth="true" VBox.vgrow="ALWAYS">
                    <children>
                        <RadioButton fx:id="optionAbsolute" text="%optionAbsolute" toggleGroup="$storageMethodSelect">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </RadioButton>
                        <VBox fillWidth="true">
                            <children>
                                <HBox prefHeight="-1.0" prefWidth="-1.0" spacing="10.0" VBox.vgrow="NEVER">
                                    <children>
                                        <TextField fx:id="selectedDirectory" HBox.hgrow="ALWAYS" />
                                        <Button onAction="#browse" prefHeight="22.0" prefWidth="100.0" styleClass="button-gray" text="%browse" HBox.hgrow="NEVER" />
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="18.0" />
                            </padding>
                        </VBox>
                        <RadioButton fx:id="optionRelative" text="%optionRelative" toggleGroup="$storageMethodSelect" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
        <BorderPane fx:id="footer">
            <right>
                <Button alignment="CENTER_RIGHT" onAction="#nextStep" styleClass="button-green" text="%continue" />
            </right>
        </BorderPane>
    </children>
</AnchorPane>
